/* pages/index/index.wxss */
.page-header{
    width:100%;
    display: flex;
    justify-content: center;
    margin-bottom: 10px;
    margin-top: 10px;
    font-size: 26px;
    border-bottom: 1px solid #000;
}
.page-header-text{
    color:#000;
}
.item{
    height:100px;
    width:100%;
    display: block;
}
.poster{
    width:30%;
    display: inline-block;
    width:80px;
    height:80px;
    border-radius: 50%;
}
.meta{
    width:60%;
    display: inline-block;
}
.meta .title,.meta .sub-title,.meta .artists{
    padding-left: 10px;
    font-size: 16px;
    display: block;
}
.meta .title{
    font-weight: 700;
}
.meta .artists{
    color:brown;
}
.rating{
    width:10%;
    display: inline-block;
}
.rating text{
    color:#f00;
}